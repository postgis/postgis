"SELECT\n"
"   ST_IsValid('LINESTRING(0 0, 1 1)') AS len_nonzero,\n"
"   ST_IsValid('LINESTRING(0 0, 0 0, 0 0)') AS len_zero,\n"
"   ST_IsValid('LINESTRING(10 10, 150 150, 180 50, 20 130)') AS self_int;\n"
"\n"
" len_nonzero | len_zero | self_int\n"
"-------------+----------+----------\n"
