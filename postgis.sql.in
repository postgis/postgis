   AS '@MODULE_FILENAME@'
   LANGUAGE 'c';

CREATE FUNCTION BOX3D_out(opaque)
   RETURNS opaque
   AS '@MODULE_FILENAME@'
   LANGUAGE 'c';

CREATE TYPE BOX3D (
	alignment = double,
	internallength = 48,
	input =  BOX3D_in,
	output =  BOX3D_out
);

CREATE TYPE WKB (
	alignment = double,
	internallength = VARIABLE,
	input =  textin,
	output =  textout
);



create function geometry_in(opaque)
	RETURNS GEOMETRY
   AS '@MODULE_FILENAME@'
   LANGUAGE 'c';

create function geometry_out(opaque)
	RETURNS opaque
   AS '@MODULE_FILENAME@'
   LANGUAGE 'c';

CREATE TYPE GEOMETRY (
	alignment = double,
	internallength = VARIABLE,
	input =  geometry_in,
	output =  geometry_out,
	storage = main
);


CREATE FUNCTION box3d(GEOMETRY)
