------- Aggregate

CREATE FUNCTION combine_bbox(BOX3D,GEOMETRY)
   RETURNS BOX3D
   AS '@MODULE_FILENAME@'
   LANGUAGE 'c';

CREATE AGGREGATE extent(
	sfunc = combine_bbox,
	basetype = GEOMETRY,
	stype = BOX3D
);

CREATE FUNCTION collector(GEOMETRY,GEOMETRY)
   RETURNS GEOMETRY
   AS '@MODULE_FILENAME@'
	     LANGUAGE 'c';

CREATE AGGREGATE collect(
	sfunc = collector,
	basetype = GEOMETRY,
	stype = GEOMETRY
);



