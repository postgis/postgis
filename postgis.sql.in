CREATE FUNCTION FIND_EXTENT(text,text) returns box3d as
'
DECLARE
	tablename alias for $1;
	columnname alias for $2;
	okay boolean;
      myrec RECORD;

BEGIN
	FOR myrec IN EXECUTE ''SELECT extent("''||columnname||''") FROM "''||tablename||''"'' LOOP
		return myrec.extent;
	END LOOP;  
END;
'
LANGUAGE 'plpgsql'  with (isstrict);
