CXX = @CXX@
CPPFLAGS = @CPPFLAGS@
CXXFLAGS =-I../../liblwgeom -Iinclude @WARNFLAGS@ @CXXFLAGS@
LDFLAGS = @LDFLAGS@
top_builddir = @top_builddir@
libdir = @libdir@
LIBTOOL = @LIBTOOL@

WAGYU_OBJS = \
	lwgeom_wagyu.o

WAGYU_LT_OBJS = $(WAGYU_OBJS:.o=.lo)



all: @WAGYU_LIB@


@WAGYU_LIB@: $(WAGYU_LT_OBJS)
	$(LIBTOOL) --tag=CXX --mode=link $(CXX) -rpath $(libdir) $(WAGYU_LT_OBJS) $(LDFLAGS) -o $@



$(WAGYU_LT_OBJS): %.lo: %.cpp ../../liblwgeom.h
	$(LIBTOOL) --mode=compile $(CXX) $(CXXFLAGS) $(CPPFLAGS) -c -o $@ $<

../../liblwgeom.h:
	$(MAKE) -C ../../liblwgeom liblwgeom.h


clean:
	rm -f @WAGYU_LIB@ @WAGYU_OBJS@ @WAGYU_LT_OBJS@
	rm -rf .libs

distclean: clean
	rm -f Makefile


install:

uninstall:

check:

