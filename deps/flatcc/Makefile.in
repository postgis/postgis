CC=@CC@
CFLAGS = -I.. -Iinclude @CPPFLAGS@ @CFLAGS@ @PICFLAGS@ -DRYU_NO_TRAILING_ZEROS
top_builddir = @top_builddir@
SHELL = @SHELL@
LIBTOOL = @LIBTOOL@

FLATCC_OBJS = src/runtime/builder.o src/runtime/emitter.o src/runtime/json_parser.o src/runtime/json_printer.o src/runtime/refmap.o src/runtime/verifier.o
LT_FLATCC_OBJS =  $(FLATCC_OBJS:.o=.lo)

all: @FLATCC_LIB@

@FLATCC_LIB@: $(LT_FLATCC_OBJS)
	$(LIBTOOL) --tag=CC --mode=link $(CC) $(LT_FLATCC_OBJS) -static -o $@

$(LT_FLATCC_OBJS): %.lo: %.c
	$(LIBTOOL) --mode=compile $(CC) $(CFLAGS) -c -o $@ $<

clean:
	rm -f @FLATCC_LIB@ $(FLATCC_OBJS) $(LT_FLATCC_OBJS)
	rm -rf .libs

distclean: clean
	rm -f Makefile

install:

uninstall:

check:

.PHONY: clean distclean install uninstall check
