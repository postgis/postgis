AR=ar rs

LIBLWGEOM_LDFLAGS=@LIBLWGEOM_LDFLAGS@
LIBLWGEOM_CFLAGS=@LIBLWGEOM_CFLAGS@
LDFLAGS=$(LIBLWGEOM_LDFLAGS) $(LIBGDAL_LDFLAGS)
CFLAGS=@CFLAGS@ @PICFLAGS@ @WARNFLAGS@ @POSTGIS_RASTER_API_DEBUG_CFLAGS@ $(LIBLWGEOM_CFLAGS) $(LIBGDAL_CFLAGS) 

# Standalone RTCORE objects
RT_OBJS=rt_api.o 
RT_LIB=librtcore.a
RT_HEADERS=rt_api.h

all: $(RT_LIB)

clean:
	$(RM) $(RT_OBJS)
	$(RM) $(RT_LIB) 

distclean: clean
	$(RM) Makefile

librtcore.a: $(RT_OBJS) $(RT_HEADERS)
	$(AR) $(RT_LIB) $(RT_OBJS)
